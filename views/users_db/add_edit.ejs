<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= user._id %>"> </div>
                        
                        <div class = "form-group">
                    <label for="email">Email_id</label>
                    <input type="text" value="<%= user.Email %>" class="form-control"
                        id="email"
                        placeholder="Enter the User Email address"
                        name="email_id" 

                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="userTextField">User name</label>
                    <input type="text" class="form-control"
                    id="usernameTextField"
                    placeholder="Enter user name"
                    name="username" 
                    value="<%= user.user_name %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="contactTextField">Contact</label>
                    <input type="text" class="form-control"
                    id="contactTextField"
                    placeholder="Enter user's contact number"
                    name="contact" 
                    value="<%= user.contact %>" required>
                    
                    </div>                    
                </div>                
                <br />
                
                <button class="btn btn-primary align-self-end" type="submit">
                    <i class="fa-solid fa-user-pen"></i> 
                    <div>
                    Submit</div>
                </button>
                
                <a href="/users_db/list" class="btn btn-warning align-self-end">
                    <i class="fa-solid fa-trash-can-xmark"></i>
                    Cancel
                </a>

            </form>
        </div>

    </div>
<%- include ../partials/footer.ejs %>